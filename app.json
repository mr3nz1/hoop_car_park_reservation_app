{
  "expo": {
    "name": "hoop_car_park_reservation_app",
    "slug": "hoop_car_park_reservation_app",
    "scheme": "hoop_car_park_reservation_app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/hoop.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash_screen.png",
      "backgroundColor": "#ffffff",
      "width": 200,
      "height": 200,
      "resizeMode": "cover"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": [
            "../assets/fonts/Avenir/Avenir-Black.ttf",
            "../assets/fonts/Avenir/Avenir-Light.ttf",
            "../assets/fonts/Avenir/Avenir-Medium.ttf",
            "../assets/fonts/Avenir/Avenir-Heavy.ttf"
          ]
        }
      ],
      "expo-secure-store"
    ]
  }
}
